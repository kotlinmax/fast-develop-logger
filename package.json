{
  "name": "fast-develop-logger",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "18.17.1"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "start:local": "cross-env NODE_ENV=local TZ=UTC ts-node-dev --respawn --transpile-only src/index.ts",
    "start:dev": "cross-env NODE_ENV=development TZ=UTC npm run clean && npm run build && node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production TZ=UTC npm run clean && npm run build && node dist/index.js",
    "start:stage": "cross-env NODE_ENV=staging TZ=UTC npm run clean && npm run build && node dist/index.js",
    "clean": "rimraf ./dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env NODE_ENV=testing jest",
    "test:watch": "cross-env NODE_ENV=testing jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "cross-env NODE_ENV=testing TZ=UTC node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=testing TZ=UTC jest --config ./test/jest-e2e.json"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "kafkajs": "^2.2.4",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "pino-pretty": "^10.3.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
